{
    "name": "sunsettia",
    "version": "0.0.4-beta",
    "access": "public",
    "description": "A toy frontend compiler inspired by Svelte",
    "private": false,
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/sunsettia.d.ts",
    "files": [
        "./dist"
    ],
    "scripts": {
        "test": "vitest",
        "dev": "tsx watch ./src/index.ts",
        "coverage": "vitest run --coverage",
        "build": "tsup ./src --format esm,cjs --dts --cjsInterop",
        "lint": "tsc",
        "publish": "npm run ci && changeset publish",
        "ci": "npm run lint && npm run coverage && npm run build"
    },
    "author": "idea456",
    "license": "ISC",
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@types/escodegen": "^0.0.10",
        "@types/node": "^20.10.0",
        "@types/ws": "^8.5.10",
        "@vitest/coverage-v8": "^0.34.6",
        "tsup": "^8.0.1",
        "tsx": "^4.5.0",
        "typescript": "^5.3.3",
        "vitest": "^0.34.6"
    },
    "dependencies": {
        "acorn": "^8.11.2",
        "acorn-walk": "^8.3.0",
        "escodegen": "^2.1.0",
        "stream-browserify": "^3.0.0",
        "ws": "^8.15.1"
    }
}
